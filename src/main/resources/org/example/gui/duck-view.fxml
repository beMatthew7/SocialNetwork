<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gui.DuckController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Top Bar: User Info & Global Actions -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label fx:id="lblUser" text="Logged in as: ..." style="-fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Delete Account" onAction="#handleDeleteAccount" style="-fx-background-color: #8b0000; -fx-text-fill: white;"/>
        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
    </HBox>

    <HBox spacing="20.0" alignment="CENTER">
        <Button fx:id="btnCommunities" text="No. of Communities: Click for details" onAction="#handleShowCommunities" style="-fx-background-color: transparent; -fx-text-fill: blue; -fx-underline: true;"/>
        <Button fx:id="btnMostSociable" text="Most Sociable: Click for details" onAction="#handleShowMostSociable" style="-fx-background-color: transparent; -fx-text-fill: blue; -fx-underline: true;"/>
        <Button text="Race Events" onAction="#handleOpenEvents" style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-weight: bold;"/> 
        <Button text="My Page" onAction="#handleOpenMyPage" style="-fx-background-color: #8A2BE2; -fx-text-fill: white; -fx-font-weight: bold;"/> 
    </HBox>

    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <!-- TAB 1: DUCKS (Existing functionality) -->
        <Tab text="Ducks">
            <VBox spacing="10.0" alignment="CENTER">
                <padding>
                    <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
                </padding>
                
                <HBox spacing="10.0" alignment="CENTER">
                    <ComboBox fx:id="typeComboBox" prefWidth="150.0" promptText="Select type" />
                    <ComboBox fx:id="comboPageSize" prefWidth="80.0" promptText="Size" />
                </HBox>

                <TableView fx:id="duckTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="Username" />
                        <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="speedColumn" prefWidth="75.0" text="Speed" />
                        <TableColumn fx:id="enduranceColumn" prefWidth="75.0" text="Endurance" />
                    </columns>
                </TableView>

                <HBox spacing="10.0" alignment="CENTER">
                    <Button text="Previous" onAction="#handlePreviousPage"/>
                    <Label fx:id="lblPage" text="Page 1 / 1"/>
                    <Button text="Next" onAction="#handleNextPage"/>
                </HBox>
            </VBox>
        </Tab>

        <!-- TAB 2: FIND USERS (All Users) -->
        <Tab text="Find Users">
            <VBox spacing="10.0" alignment="CENTER">
                <padding>
                    <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
                </padding>
                <Label text="Select a user to add as friend"/>
                <TableView fx:id="allUsersTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="allUsersNameCol" prefWidth="200.0" text="Username" />
                        <TableColumn fx:id="allUsersEmailCol" prefWidth="250.0" text="Email" />
                    </columns>
                </TableView>
                <Button text="Add Friend" onAction="#handleAddFriend" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </VBox>
        </Tab>

        <!-- TAB 3: MY FRIENDS -->
        <Tab text="My Friends">
            <VBox spacing="10.0" alignment="CENTER">
                <padding>
                    <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
                </padding>
                <Label text="Your friends list"/>
                <TableView fx:id="friendsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="friendsNameCol" prefWidth="200.0" text="Username" />
                        <TableColumn fx:id="friendsEmailCol" prefWidth="250.0" text="Email" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER">
                    <Button text="Open Chat" onAction="#handleOpenChat" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    <Button text="Remove Friend" onAction="#handleRemoveFriend" style="-fx-background-color: #ff9800; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </Tab>

        <!-- Tab Friend Requests-->
        <Tab text="Friend Requests">
            <VBox spacing="10.0" alignment="CENTER">
                <padding>
                    <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
                </padding>
                <Label text="Received Requests"/>
                <TableView fx:id="receivedRequestsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="receivedFromUserCol" prefWidth="200.0" text="From User" />
                        <TableColumn fx:id="receivedStatusCol" prefWidth="150.0" text="Status" />
                        <TableColumn fx:id="receivedDateCol" prefWidth="150.0" text="Date" />
                    </columns>
                </TableView>
                <HBox spacing="10.0" alignment="CENTER">
                    <Button text="Accept" onAction="#handleAcceptRequest" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button text="Reject" onAction="#handleRejectRequest" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                </HBox>

                <Label text="Sent Requests"/>
                <TableView fx:id="friendsRequests" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="friendsNameColRequest" prefWidth="200.0" text="To User" />
                        <TableColumn fx:id="requestStatus" prefWidth="150.0" text="Status" />
                    </columns>
                </TableView>

            </VBox>
        </Tab>

        <!-- TAB 4: RaceEvent -->


    </TabPane>
</VBox>
